			width $circle-hl - ($stroke-w * 2)

//Inventory Btn

$ih = 70px

.player-user--inventory
	position absolute
	cursor pointer
	bottom 50px
	right 5px
	display inline-block
	height $ih
	width $ih
	line-height $ih
	background-color lighten($yellowl, 40%)
	border-radius 50%
	border 3px solid $brown
	box-shadow(0 2px 6px rgba($black, 60%))
	span.inventory-level
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		color $white
		font-size 24px
		background-color rgba($black, 80%)
		opacity 0
		border-radius 50%
		transition(all 300ms ease-in-out)
		transform(scale(0))
		&::before
			content '+'
	&:hover
		span.inventory-level
			opacity 1
			transform(scale(1))
