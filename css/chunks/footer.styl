/*!
Footer
*/

$card-hl = 350px
$card-wl = 225px

.player-user--cards
	position fixed
	bottom 0
	left 50%
	margin-left -342px
	max-width $card-wl * 3
	height $card-hl
	white-space nowrap
	.card, 
	.card .front, 
	.card .back, 
	.card .flipper
		width $card-wl
		height $card-hl
		border-radius(30px)
	.card
		visibility hidden
		position relative
		bottom -50%
		display inline-block
		transition(bottom 300ms ease-in-out)
		animation(show_cards_in_hand 500ms ease-in-out forwards)
	.card:hover
		bottom 0
		visibility visible


@keyframes show_cards_in_hand
	from
		visibility hidden
		opacity 0
		transform(scale(0.86) translate3d(0, 100%, 0))
	to
		visibility visible
		opacity 1
		transform(scale(1) translate3d(0, 0, 0))

