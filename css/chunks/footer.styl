	
.player-user
	position fixed
	bottom 0
	left 0
	width 100%
	text-align center
	vertical-align middle
	
$card-hl = 350px
$card-wl = 225px

.player-user--cards
	display inline-block
	max-width 50%
	height $card-hl
	white-space nowrap
	overflow-x scroll
	overflow-y hidden
	vertical-align middle
	.card, 
	.card .front, 
	.card .back, 
	.card .flipper
		width $card-wl
		height $card-hl
	.card
		position relative
		bottom -50%
		visibility hidden
		display inline-block
		transition(all 300ms ease-in-out)
		animation(anim-c 500ms ease-in-out forwards)
	.card:hover
		bottom 0


.player-user--inventory
	position absolute
	bottom 55px
	right 0px
	border 4px solid $yellow
	box-shadow(0 0 6px rgba($black, 40%))
	display inline-block
	height $circle-h - ($stroke-w * 2)
	width $circle-h - ($stroke-w * 2)
	line-height $circle-h - ($stroke-w * 2)
	background-color $white
	border-radius 50%
	img
		display inline-block
		height 40px
		width 40px
		vertical-align middle


.player-human
	margin-top 60px
	transform(scale(1.8))


@keyframes anim-c
	from
		visibility hidden
		opacity 0
		transform(translateY(100%))
	to
		visibility visible
		opacity 1
		transform(translateY(0))

.player-user--avatar
	position fixed
	bottom 0
	left 0
	width 200px
	height 227px
	margin-bottom -30px
	display block
	border-radius 100px 100px 0 0
	background url('../images/1_02.png') no-repeat
	background-position top right
	background-size contain
	box-shadow(-10px -7px 10px  rgba($black, 60%))

.player-user::after
	content ''
	position absolute
	bottom 0
	left 195px
	height 154px
	width 100%
	margin-bottom -30px
	z-index -1
	background-image url(../images/1_04.png)
	background-size contain
	background-position 4px 0px
	box-shadow(-10px -7px 10px  rgba($black, 60%))
	
.player-buttons
	position fixed
	bottom 0
	right 0
	padding-bottom 20px
	