// User

$circle-hl = 120px

.player-human
	margin-top 50px
	max-width $circle-hl
	.player--avatar
		height $circle-hl
		.player--label-level
			height 35px
			width 35px
			line-height 35px
			font-size 18px
		img 
			height $circle-hl - ($stroke-w * 2)
			width $circle-hl - ($stroke-w * 2)

.player-human.hint .player--avatar img
	animation blame 1.3s ease-in-out infinite

@keyframes blame
	0%, 100%
		box-shadow 0 0 10px 5px #5cb85c
	50%
		box-shadow 0 0 20px 10px #5cb85c
		
