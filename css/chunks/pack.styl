/*!
Pack
*/

.pack
	display inline-block
	position relative
	width $card-w
	height $card-h
	&::after
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
	&.pack--treasures,
	&.pack--doors
		.card:not(:last-child)
			position absolute
			top 0
			left 0

.pack + .pack
	margin-left 30px

.pack-left,
.pack-right
	position absolute
	left 100px
	top 50%
	transform(translate3d(0, -50%, 0))
	
.pack-right
	left auto
	right 100px

