$dice_h = 60px

.dice-container
	position absolute
	top 50%
	left 50%
	z-index 777
	margin-top - ($dice_h / 2)
	margin-left - ($dice_h / 2)

.dice
	width $dice_h
	height $dice_h
	display inline-block
	transform-style preserve-3d
	transition all 600ms 200ms linear
	> div
		height $dice_h
		width $dice_h
		position absolute
		background $yellow
		box-shadow inset 0 0 2px 5px rgba($black, 10%)
	span
		width 8px
		height 8px
		background $brown
		border-radius 50%
		display block
		position absolute
	.front
		transform rotateY(0deg) translateZ($dice_h / 2)
		span
			&:nth-child(1)
				top 10px
				left 12px
			&:nth-child(2)
				top 10px
				right 12px
			&:nth-child(3)
				top 26px
				left 12px
			&:nth-child(4)
				top 26px
				right 12px
			&:nth-child(5)
				bottom 10px
				left 12px
			&:nth-child(6)
				bottom 10px
				right 12px
	.back
		transform rotateX(180deg) translateZ($dice_h / 2)
		span
			top 26px
			left 26px
	.right
		transform rotateY(90deg) translateZ($dice_h / 2)
		span
			&:nth-child(1)
				top 12px
				left 12px
			&:nth-child(2)
				top 12px
				right 12px
			&:nth-child(3)
				top 26px
				left 26px
			&:nth-child(4)
				bottom 12px
				left 12px
			&:nth-child(5)
				bottom 12px
				right 12px
	.left
		transform rotateY(-90deg) translateZ($dice_h / 2)
		span
			&:nth-child(1)
				top 12px
				right 12px
			&:nth-child(2)
				bottom 12px
				left 12px
	.top
		transform rotateX(90deg) translateZ($dice_h / 2)
		span
			&:nth-child(1)
				top 12px
				right 12px
			&:nth-child(2)
				bottom 12px
				left 12px
			&:nth-child(3)
				bottom 26px
				left 26px
	.bottom
		transform rotateX(-90deg) translateZ($dice_h / 2)
		span
			&:nth-child(1)
				top 12px
				right 12px
			&:nth-child(2)
				top 12px
				left 12px
			&:nth-child(3)
				bottom 12px
				left 12px
			&:nth-child(4)
				bottom 12px
				right 12px
				

.dice-container[data-value="1"] .dice
	transform translateZ(- $dice_h / 2) rotateX(-180deg)

.dice-container[data-value="2"] .dice
	transform translateZ(- $dice_h / 2) rotateY(90deg)
	
.dice-container[data-value="3"] .dice
	transform translateZ(- $dice_h / 2) rotateX(-90deg)

.dice-container[data-value="4"] .dice
	transform translateZ(- $dice_h / 2) rotateX(90deg)

.dice-container[data-value="5"] .dice
	transform translateZ(- $dice_h / 2) rotateY(-90deg)

.dice-container[data-value="6"] .dice
	transform translateZ(- $dice_h / 2) rotateY(0deg)

.dice-container[data-value="same"] .dice
	transform translateZ(- $dice_h / 2) rotateY(270deg)

.dice-container.rolling
	animation bounce 800ms linear

@keyframes bounce
	0%, 20%, 50%, 80%, 100%
		transform scale(1)
	40%
		transform scale(1.8)
	60%
		transform scale(1.3) 
