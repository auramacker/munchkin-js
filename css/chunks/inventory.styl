.card-place
	position relative
	display inline-block
	margin 0
	padding 0
	width $card-w
	height $card-h
	bgsz()
	border-radius(25px)
	overflow hidden
	border 1px solid rgba($white, 20%)
	z-index 3
	box-shadow(0 2px 6px rgba($black, 60%))


.card-place .unset-card
	cursor pointer
	position absolute
	top 20px
	right 20px
	height 30px
	width 30px
	line-height 35px
	text-align center
	background-color $brown
	border 2px solid $yellow
	border-radius 50%
	font-size 36px
	color $yellow
	opacity 0
	transition all 200ms ease-in-out
	box-shadow(0 2px 2px rgba($black, 60%))

.card-place:hover .unset-card
	opacity 1

.has-3child .card-place:nth-child(1) .unset-card
	right auto
	left 20px



.inventory-wrap
	position absolute
	top 0
	left 0
	width 100%
	z-index 9
	height 100%
	text-align center
	background-color rgba($black, 40%)
	display none
	
.has-3child
	display inline-block
	position relative
	.card-place:nth-child(2)
		position absolute
		top -20px
		left 50%
		opacity .4
		z-index 4
		transform(translate3d(-50%, 0, 0))
	&.has-supermunchkin,
	&.has-halfblood
		.card-place:nth-child(1)
			margin-right 30px
		.card-place:nth-child(3)
			margin-left 30px
		.card-place:nth-child(2)
			z-index 2

.inventory
	position relative
	top 60px
	padding 40px
	display inline-block
	border-radius 30px
	background-image url(http://blog.spoongraphics.co.uk/wp-content/uploads/2012/textures/15.jpg)
	background-position top left
	background-repeat repeat



.inventory-top
	display block
	clearfix()

.inventory-bottom
	display inline-block
	margin-top 40px