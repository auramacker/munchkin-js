.card-place
	display inline-block
	margin 0
	padding 0
	width $card-w
	height $card-h
	bgsz()
	border-radius(25px)
	overflow hidden
	border 1px solid rgba($white, 20%)
	box-shadow(0 2px 6px rgba($black, 60%))
	

.inventory-wrap
	position fixed
	top 0
	left 0
	width 100%
	z-index 9
	height 100%
	text-align center
	background-color rgba($black, 40%)
	opacity 0
	visibility hidden
	transition(all 300ms ease-in-out)
	&.is-visible
		visibility visible
		opacity 1

.has-3child
	display inline-block
	position relative
	.card-place:nth-child(2)
		position absolute
		top -20px
		left 50%
		opacity .4
		transform(translate3d(-50%, 0, 0))
	

.inventory
	margin 60px
	padding 40px
	display inline-block
	border-radius 30px
	background-image url(http://blog.spoongraphics.co.uk/wp-content/uploads/2012/textures/15.jpg)
	background-position top left
	background-repeat repeat
	opacity 0
	transform(translate3d(0, 100%, 0))
	transition(all 400ms ease-in-out)
	
.inventory-wrap.is-visible .inventory
	opacity 1
	transform(translate3d(0, 0, 0))


.inventory-top
	display inline-block
	clearfix()

.inventory-bottom
	display inline-block
	margin-top 40px