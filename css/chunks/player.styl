$circle-h = 80px
$stroke-w = 5px



.player
	display inline-block
	position relative
	text-align center



// Circle
.player--avatar
	display inline-block
	position relative
	height $circle-h
	img
		height 
		height $circle-h - ($stroke-w * 2)
		width $circle-h - ($stroke-w * 2)
		border-radius(50%)
		box-shadow(0 1px 6px 2px rgba($black, 80%))
	.player--label-level
		position absolute
		top 0
		left - $stroke-w
		display inline-block
		z-index 6
		height 20px
		width 20px
		line-height 20px
		font-size 14px
		text-align center
		border-radius 2px
		border-radius 50%
		background-color $yellow
		color $brown
		box-shadow(0 1px 4px rgba($black, 80%))
	.player--svg-level
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin - $stroke-w
		user-select(none)
		circle
			stroke-dashoffset 0
			transition all 300ms ease-in-out
			stroke #4c1a11
			stroke-width $stroke-w
			&.player--svg-level-bar
				stroke $yellow


.player--info
	position relative
	margin-top 4px
	border-radius 4px
	line-height 1em
	padding 6px 10px
	color darken($yellowl, 35%)
	border 2px solid $yellow
	background-color rgba($black, 80%)
	box-shadow(0 1px 4px rgba($black, 80%))
	.player--info-equipment
		padding-left 3px
		border-left 1px solid $yellow
.player--info-name
	display none
	font-size 10px
	text-transform uppercase

.player--info-card-length
	display inline-block
	width 40%

.player--info-equipment
	display inline-block
	width 40%
	

.player--cpu
	position absolute
	display none
	top 0
	left 0





