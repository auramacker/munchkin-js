$circle-h = 80px
$stroke-w = 5px

/*!
Player
*/

.player
	display inline-block
	position relative
	text-align center
	max-width $circle-h

.player
	.player--avatar
		display block
		position relative
		height $circle-h
		img 
			height $circle-h - ($stroke-w * 2)
			width $circle-h - ($stroke-w * 2)
			border-radius(50%)
			box-shadow(0 2px 6px rgba($black, 60%))
		.player--label-level
			position absolute
			top 0
			left - $stroke-w
			display inline-block
			z-index 6
			height 26px
			width 26px
			line-height 26px
			font-size 16px
			text-align center
			border-radius 2px
			border-radius 50%
			color $brown
			background-color $yellow
			box-shadow(0 2px 2px rgba($black, 60%))
		.player--svg-level
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			margin - $stroke-w
			circle
				stroke-dashoffset 0
				stroke-width $stroke-w
				transition(0s)
				&.player--svg-level-bar
					stroke $yellow

.player--info
	position relative
	margin-top 4px
	border-radius 4px
	line-height 1em
	border 2px solid $yellow
	color darken($yellowl, 35%)
	background-color rgba($black, 80%)
	box-shadow(0 2px 6px rgba($black, 60%))
	clearfix()
	.player--info-card-length,
	.player--info-equipment
		display block
		padding 6px 0
		float left
		width 50%
		text-align center




