body
	margin 0
	padding 0
	overflow hidden

img
	width 100%
	height auto

.mn-full-game
	height 100vh
	background-color #f2f2f2


.mn-main-table
	position relative
	padding 60px
	height 70vh
	background-color red


.mn-players li
	position absolute
	top 0
	left 0


.card
	position relative
	display inline-block
	z-index 6
	transform-style preserve-3d
	transition transform 450ms
	figure
		position relative
		width 180px
		height 280px
		margin 0
		border-radius 20px
		overflow hidden
		display block
		-webkit-backface-visibility hidden
		&.back
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			transform rotateY(-180deg)
	&.flipped
		transform rotateY(180deg)
