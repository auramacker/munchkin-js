.mn-players li
	position absolute
	top 0
	left 0


.card
	position relative
	display inline-block
	z-index 6
	transform-style preserve-3d
	transition transform 450ms
	figure
		position relative
		width 180px
		height 280px
		margin 0
		border-radius 25px
		border-style solid
		border-width 1px
		overflow hidden
		display block
		-webkit-backface-visibility hidden
		&.back
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			transform rotateY(-180deg)
	&.flipped
		transform rotateY(180deg)

.card.card--treasures figure
	border-color #ffb932
	
.card.card--doors figure
	border-color #75482d
	
.pack
	position relative
	&.pack--treasures,
	&.pack--doors
		.card:not(:first-child)
			position absolute
			top 0
			left 0
